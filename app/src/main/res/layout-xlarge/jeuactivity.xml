<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:scrollbarDefaultDelayBeforeFade="@android:integer/config_shortAnimTime"
    android:scrollbarFadeDuration="?android:attr/scrollbarFadeDuration">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/carte1"
        android:id="@+id/carte_1"
        android:layout_marginStart="70dp"
        android:layout_below="@+id/home"
        android:layout_toEndOf="@+id/carte_2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/carte1"
        android:id="@+id/carte_2"
        android:layout_below="@+id/home"
        android:layout_toStartOf="@+id/imageView3"
        android:layout_marginEnd="35dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:background="@drawable/ic_home_black_18dp"
        android:layout_alignStart="@+id/rep_1"
        android:layout_toStartOf="@+id/carte_2"
        android:layout_alignEnd="@+id/rep_1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/multiplication"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/nb2"
        android:layout_alignEnd="@+id/answer2"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer1"
        android:background="@mipmap/reponse2"
        android:layout_below="@+id/carte_2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nb2"
        android:textSize="33sp"
        android:hint="10"
        android:layout_alignBaseline="@+id/nb1"
        android:layout_alignBottom="@+id/nb1"
        android:layout_alignStart="@+id/carte_1"
        android:layout_marginStart="14dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nb1"
        android:textSize="33sp"
        android:hint="10"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/home"
        android:layout_alignStart="@+id/carte_2"
        android:layout_marginStart="11dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ImageButton"
        android:background="@mipmap/reponse2"
        android:layout_alignTop="@+id/answer1"
        android:layout_toEndOf="@+id/answer2"
        android:id="@+id/answer3" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer2"
        android:background="@mipmap/reponse2"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/answer1" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rep_2"
        android:textSize="30sp"
        android:hint="100"
        android:layout_marginStart="17dp"
        android:layout_alignTop="@+id/answer2"
        android:layout_toEndOf="@+id/nb1"
        android:layout_marginTop="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rep_3"
        android:textSize="30sp"
        android:hint="100"
        android:layout_alignBottom="@+id/answer3"
        android:layout_alignEnd="@+id/nb2"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="19dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rep_1"
        android:textSize="30sp"
        android:hint="100"
        android:layout_marginEnd="21dp"
        android:layout_alignBottom="@+id/rep_3"
        android:layout_toStartOf="@+id/answer2"
        android:layout_marginBottom="11dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/pendu1"
        android:id="@+id/pendu"
        android:layout_marginEnd="19dp"
        android:layout_alignBottom="@+id/rep_1"
        android:layout_alignParentEnd="true" />


</RelativeLayout>